def invertir_frase(frase):
    return frase[::-1]

while True:
    frase = input("Introduce frase: ")
    frase_invertida = invertir_frase(frase)
    print("Frase invertida:", frase_invertida)
    
    continuar = input("Â¿Quieres introducir otra frase? (s/n): ")
    if continuar.lower() != "s":
        break
